        #navbarNavAltMarkup.collapse.navbar-collapse
            ul.navbar-nav.ml-auto
                li.nav-item
                    a#aStudies.nav-link.active(href='#billing/studies/list', i18n='shared.moduleheader.studies')
                li.nav-item
                    a#aClaims.nav-link(href='#billing/claim_workbench/list', i18n='shared.moduleheader.claims')
                li.nav-item
                    a#aPayments.nav-link(href='#billing/payments/list', i18n='shared.moduleheader.payments')
                li.nav-item
                    a#aEob.nav-link(href='#billing/era/list', i18n='shared.moduleheader.eob')

                li.nav-item.dropdown
