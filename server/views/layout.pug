doctype html
html
  head
    title= title
    link(rel='stylesheet', href=staticAssetsRoot + '/node_modules/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/node_modules/select2/dist/css/select2.min.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/node_modules/bootstrap-multiselect/dist/css/bootstrap-multiselect.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/node_modules/bootstrap-daterangepicker/daterangepicker.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/node_modules/font-awesome/css/font-awesome.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/libs/datetimepicker/css/bootstrap-datetimepicker.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/node_modules/quill/dist/quill.snow.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:300,400,500')

    link(rel='stylesheet', href=staticAssetsRoot + '/libs/jqgrid/css/ui.jqgrid.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/libs/jqgrid/css/jquery-ui-1.10.2.custom.css')
    
    link(rel='stylesheet', href=staticAssetsRoot + '/js/modules/multichat/stylesheets/chat.css')
    link(rel='stylesheet', href=staticAssetsRoot + '/skins/' + currentTheme + '/index.css')
    script.
        var currentTheme = '#{currentTheme}';     
    
    //- link(rel='stylesheet', href=staticAssetsRoot + '/skins/default/index.css')

  body
    block content

    div#siteModal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true', data-backdrop='static', data-keyboard='false')
        div#modalDialog.modal-dialog.modal-dialog-centered(role='document')
            div.modal-content
                div.modal-header
                    button.close.btn-close.btn.circle(type='button', data-dismiss='modal')
                            i.icon-ic-close
                    h4#spanModalHeader.modal-title
                div#modalBody.modal-body
                    div(id="modal_div_container")
                div.modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal', i18n="shared.buttons.cancel")

    div#siteModalNested.modal.fade(tabindex='-1', role='dialog', aria-hidden='true', data-backdrop='static', data-keyboard='false')
        div#modalDialogNested.modal-dialog.modal-dialog-centered(role='document')
            div.modal-content
                div.modal-header
                    button.close.btn-close.btn.circle(type='button', data-dismiss='modal')
                            i.icon-ic-close 
                    h4#spanModalHeaderNested.modal-title
                div#modalBodyNested.modal-body
                    div(id="modal_div_container_nested")
                div.modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal', i18n="shared.buttons.cancel")
